extends layout

block content
  include header-hero
  main
    section.hero
      picture
        source(media="(max-width: 499px)" srcset="images/miyajima-hero-400w.jpg")
        source(media="(min-width: 799px)" srcset="images/miyajima-hero-700w.jpg")
        source(media="(min-width: 800px)" srcset="images/miyajima-hero.jpg")
        img.hero-img(src="images/miyajima-hero.jpg" alt="Hero image of the Torii gate at Miyajima")
      h1 Kevin Adu-Sarkodie
    section#my-projects
      .l-2-column-grid
        figure.project-card.project-tokyo
          a(href="tokyo.html")
            img.project-card-image
            figcaption.project-description
              h2.project-card-title Tokyo, Japan
        figure.project-card.project-yokohama
          a(href="yokohama.html")
            img.project-card-image
            figcaption.project-description
              h2.project-card-title Yokohama, Japan
        figure.project-card.project-hiroshima
          a(href="hiroshima.html")
            img.project-card-image
            figcaption.project-description
              h2.project-card-title Hiroshima, Japan
        figure.project-card.project-hong-kong
          a(href="hong-kong.html")
            img.project-card-image
            figcaption.project-description
              h2.project-card-title Hong Kong, China
  include footer
